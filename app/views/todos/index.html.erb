<% @todos.each do |todo| %> 
  <%= todo.description %>
  <%= form_for todo do |f| %>
    <%= f.check_box :status, checked: todo.status %> 
    <%= f.submit :submit %>
  <% end %>
  <ul>
    <% todo.items.each do |item| %> 
       <li><%= item.content %></li>
       <%= form_for item do |f| %> 
         <% if item.status %> 
           <%= f.check_box :status, checked: true %> 
         <% else %>
             <%= f.check_box :status %>
         <% end %>
         <%= f.submit :submit %>
       <% end %>
    <% end %> 
  </ul>
<% end %> 
